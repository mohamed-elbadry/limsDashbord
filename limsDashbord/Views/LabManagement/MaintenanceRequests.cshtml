<div class="card-header py-3">
    <div class="card py-3">
        <div class="p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex flex-column">
                    <h2>
                        Maintenance Requests
                    </h2>

                    <ul class="nav-sub d-flex align-items-center gap-2 m-0 p-0">
                        <li class="nav-sub-item"><a asp-action="index" asp-controller="home" class="nav-sub-link text-black">Home</a></li>
                        <li class="text-black">/</li>
                        <li class="text-black">Lab Management</li>
                        <li class="text-black">/</li>
                        <li class="text-black"> Maintenance Requests</li>
                    </ul>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-primary btn-block rounded-2" data-bs-toggle="modal" data-bs-target="#newSampleModal">
                        <i class="fas fa-plus px-1"></i>
                        Add New Request
                    </button>

                    <div class="modal fade" id="newSampleModal" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-xl" role="document">
                            <div class="modal-content modal-content-demo">
                                <div class="modal-header">
                                    <h6 class="modal-title">
                                        Add New Request
                                    </h6>
                                </div>
                                <div class="modal-body">
                                    <div class="row py-2">
                                        <div class="col-lg-6 col-12">
                                            <p class="mg-b-10">
                                                Title <sapn class="text-danger">*</sapn>
                                            </p>
                                            <input class="form-control" placeholder="Title" type="text">
                                        </div>
                                        <div class="col-lg-6 col-12">
                                            <p class="mg-b-10">
                                                Equipment <sapn class="text-danger">*</sapn>
                                            </p>
                                            <select class="form-control select2">
                                                <option label="Ahmed"></option>
                                                <option>Mahmoud</option>
                                                <option>Adel</option>
                                                <option>Ali</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-6 col-12 py-2">
                                            <label for="notes">Notes <sapn class="text-danger">*</sapn></label>
                                            <textarea id="notes" rows="3" class="form-control" placeholder="Notes" style="height: 80px;"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer justify-content-start">
                                    <button type="button" class="btn btn-indigo">Save</button>
                                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-gray-700 btn-block rounded-2">
                        <i class="fa fas fa-bolt"></i>
                        Reload
                    </button>
                    <button id="advancedFilterBtn" class="btn btn-success btn-block rounded-2 text-white">
                        <i class="fa fas fa-bolt"></i>
                        Advanced Filter
                    </button>
                </div>
            </div>
            <div class="py-5">
                <div class="card bd-0">
                    <div class="card-header bg-gray-400 bd-b-0-f pd-b-0">
                        <nav class="nav nav-tabs">
                            @* <a class="nav-link active" data-bs-toggle="tab" href="#tabCont1">Medical Equipment</a> *@
                            @* <a class="nav-link" data-bs-toggle="tab" href="#tabCont2">Maintenance Requests</a> *@
                            <a asp-controller="LabManagement" asp-action="Equipment" class="nav-link">Medical Equipment</a>
                            <a asp-controller="LabManagement" asp-action="MaintenanceRequests" class="nav-link active">MaintenanceRequests</a>

                        </nav>
                    </div><!-- card-header -->
                    <div class="card-body bd bd-t-0 tab-content">
                        <div id="tabCont1" class="tab-pane active show">
                            <div class="row">
                                <div class="col-12">
                                    <div class="card my-3">
                                        <div id="filterRow" class="row p-3 d-none">
                                            <div class="col-lg-4 col-12">
                                                <p class="mg-b-10">Code</p>
                                                <input class="form-control" placeholder="Code" type="text">
                                            </div>
                                            <div class="col-lg-8 col-12 d-flex align-items-end">
                                                <button class="btn btn-info btn-block rounded-2">
                                                    <i class="fas fa-search"></i> Search
                                                </button>
                                            </div>
                                        </div>
                                        <div class="p-3">
                                            <div class="table-responsive">
                                                
                                                    <table id="example2" class="text-center table table-bordered table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>#</th>
                                                                <th>Description</th>
                                                                <th>Device Name</th>
                                                                <th>Model</th>
                                                                <th>Brand</th>
                                                                <th>Status</th>
                                                                <th>Added By</th>
                                                                <th>Added Date</th>
                                                                <th>Price</th>
                                                                <th>Notes</th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            <tr>
                                                                <td>1</td> <!-- # -->
                                                                <td>TP-204</td> <!-- Description -->
                                                                <td>pH Level</td> <!-- Device Name -->
                                                                <td>Chemical</td> <!-- Model -->
                                                                <td>pH</td> <!-- Brand -->
                                                                <td>APHA 4500-H+</td> <!-- Status -->
                                                                <td>Mohamed Ali</td> <!-- Added By -->
                                                                <td>2025-11-20</td> <!-- Added Date -->
                                                                <td>150 EGP</td> <!-- Price -->
                                                                <td>Routine water quality test</td> <!-- Notes -->
                                                            </tr>
                                                        </tbody>
                                                    </table>

                                              
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- tab-pane -->
                        

                    </div><!-- card-body -->
                </div><!-- card -->
            </div>


        </div>
    </div>
</div>


@section Scripts {
    <script>

               $('#newSampleModal').on('shown.bs.modal', function () {
            // Fix select2 with modal
            $('.select2').select2({
                placeholder: 'Choose one',
                searchInputPlaceholder: 'Search',
                dropdownParent: $('#newSampleModal')
            });

            // Fix input mask
            $('#dateMask').mask('99/99/9999');
        });

         $('#secondSampleModal').on('shown.bs.modal', function () {
            // Fix select2 with modal
            $('.select2').select2({
                placeholder: 'Choose one',
                searchInputPlaceholder: 'Search',
                dropdownParent: $('#secondSampleModal')
            });

             // Fix input mask
             });
              const btn = document.getElementById('advancedFilterBtn');
        const filterRow = document.getElementById('filterRow');

        btn.addEventListener('click', function () {
            filterRow.classList.toggle('d-none');
        });
    </script>
}

