<div class="w-100 py-3">
    <div class="card border-0 py-3">
        <div class="p-3">
            <div class="d-flex flex-column">
                <h2>
                    Unit Templates
                </h2>
                <ul class="nav-sub d-flex align-items-center gap-2 m-0 p-0">
                    <li class="nav-sub-item"><a asp-action="index" asp-controller="home" class="nav-sub-link text-black">Home</a></li>
                    <li class="text-black">/</li>
                    <li class="text-black">
                        Unit Templates
                    </li>
                    <li class="text-black">/</li>
                    <li class="text-black">
                        Add or Edit
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row py-3">
        <div class="col-lg-6 col-12 px-4">
            <div class="card">
                <div class="card-header">
                    Unit Templates
                </div>
                <div class="card-body">
                    <div class="row py-2">
                        <div class="col-lg-6 col-12">
                            <p class="mg-b-10">
                                Code
                            </p>
                            <input class="form-control" placeholder="Code" value="ProUnt-2025-0001" type="text">
                        </div>
                        <div class="col-lg-6 col-12">
                            <p class="mg-b-10">
                                Unit Name
                            </p>
                            <input class="form-control" placeholder="Name" type="text">
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-lg-6 col-12">
                            <p class="mg-b-10">
                                Short Name
                            </p>
                            <input class="form-control" placeholder="Name" type="text">
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-lg-6 col-12">
                            <p class="mg-b-10">Type</p>
                            <select class="form-control select2">
                                <option value="" disabled selected>Select Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                                <option value="pending">Pending</option>
                                <option value="disabled">Disabled</option>
                                <option value="archived">Archived</option>
                            </select>
                        </div>
                        <div class="col-lg-6 col-12">
                            <p class="mg-b-10">Base Unit Name</p>
                            <select class="form-control select2">
                                <option value="" disabled selected>Select Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                                <option value="pending">Pending</option>
                                <option value="disabled">Disabled</option>
                                <option value="archived">Archived</option>
                            </select>
                        </div>
                    </div>

                    <div class="row py-2">
                        <div class="col-lg-6 col-12">
                            <p class="mg-b-10">
                                Factor
                            </p>
                            <input class="form-control" placeholder="" type="number">
                        </div>
                    </div>

                   
                    <div class="row py-2">
                        <div class="col-lg-3 col-12">
                            <label class="ckbox">
                                <input type="checkbox"><span>Active</span>
                            </label>
                        </div>
                        <div class="col-lg-3 col-12">
                            <label class="ckbox">
                                <input type="checkbox"><span>IsBaseUnit</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="card-footer">

                    <button class="btn btn-sm btn-success">
                        <i class="fas fa-save"></i> <span class="px-1">Save</span>
                    </button>

                    <a class="btn btn-sm btn-outline-danger mx-2" href="/sales/customers">
                        <i class="fas fa-ban"></i> <span class="px-1">Cancel</span>
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("trackStock").addEventListener("change", function () {
            const lowStock = document.getElementById("lowStockRow");

            if (this.checked) {
                lowStock.classList.remove("d-none");
            } else {
                lowStock.classList.add("d-none");
            }
        });


    </script>
}






